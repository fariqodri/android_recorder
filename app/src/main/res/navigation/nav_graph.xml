<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recorderFragment">

    <fragment
        android:id="@+id/recorderFragment"
        android:name="id.ac.ui.cs.mobileprogramming.fariqodriandana.recorder.fragments.RecorderFragment"
        android:label="fragment_recorder"
        tools:layout="@layout/fragment_recorder" >
        <action
            android:id="@+id/action_recorderFragment_to_playerFragment"
            app:destination="@id/playerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="id.ac.ui.cs.mobileprogramming.fariqodriandana.recorder.fragments.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" />
</navigation>